---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0">

    <channel>

        <title>Chris Burnell</title>
        <link href="http://chrisburnell.com"/>
        <author>
            <name>Chris Burnell</name>
            <email>me@chrisburnell.com</email>
        </author>
        <language>en</language>
        <copyright>Copyright 2014 Chris Burnell under a Creative Commons license.</copyright>

        <image>
            <url>http://chrisburnell.com/icon.png</url>
            <title>Chris Burnell</title>
            <link>http://chrisburnell.com</link>
        </image>

        {% for post in site.posts %}{% unless post.draft %}<item>
            <title>{{ post.title }}</title>
            <link>http://chrisburnell.com{{ post.url }}</link>
            <pubDate>{{ post.date | date_to_xmlschema }}</pubDate>
            <id>http://chrisburnell.com{{ post.id }}</id>{% if post.introduction %}
            <description>{{ post.introduction }}</description>{% endif %}{% if post.tags %}
            <tags>{{ post.tags | array_to_sentence_string }}</tags>{% endif %}
        </item>{% endunless %}{% endfor %}

    </channel>

</rss>