---
layout: null
---

<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0">

    <channel>

        <title>{{ site.author }}</title>
        <link href="{{ site.url }}"/>
        <author>
            <name>{{ site.author }}</name>
            <email>{{ site.author_email }}</email>
        </author>
        <language>en</language>
        <copyright>Copyright {{ site.time | date: "%Y" }} {{ site.author }} under a Creative Commons license.</copyright>

        <image>
            <url>{{ site.url }}/favicon.png</url>
            <title>{{ site.author }}</title>
            <link>{{ site.url }}</link>
        </image>

        {% assign all_posts = "" | split: "" %}
        {% for post in site.posts %}
            {% assign all_posts = all_posts | push: post %}
        {% endfor %}
        {% for post in site.pens %}
            {% assign all_posts = all_posts | push: post %}
        {% endfor %}
        {% assign all_posts_sorted = all_posts | sort: "date" %}
        {% for post in all_posts_sorted %}
            <item>
                <title>{{ post.title }}</title>
                <link>{{ site.url }}{{ post.url }}</link>
                <pubDate>{{ post.date | date_to_xmlschema }}</pubDate>
                <category>{{ post.category }}</category>
                {% if post.introduction %}<description>{{ post.introduction }}</description>{% endif %}
                {% if post.tags %}
                    {% assign tags_sorted = post.tags | sort: 0 %}
                    <tags>{% for tag in tags_sorted %}{{ tag }}{% if forloop.last == false %},{% endif %}{% endfor %}</tags>
                {% endif %}
            </item>
        {% endfor %}

    </channel>

</rss>
