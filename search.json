---
layout: null
searchable: false
---

{% assign first = true %}
[
{% for page in site.pages %}
    {% unless page.title == null or page.title == empty or page.searchable == false or page.draft %}
        {% unless first %},{% endunless %}{
            "type": "page",
            "link": {{ page.url | json }},
            "title": {{ page.title | json }},
            "lede": {{ page.lede | json }}{% unless page.searchable == 'no-content' %},
            "content": {{ page.content | strip_html | strip_newlines | json }}{% endunless %}
        }{% assign first = false %}
    {% endunless %}
{% endfor %}
{% for post in site.posts %}
    {% unless post.title == null or post.title == empty or post.searchable == false or post.draft %}
        {% unless first %},{% endunless %}{
            "type": "{% if post.categories contains 'pen' %}pen{% else %}article{% endif %}",
            "link": {{ post.url | json }},
            "title": {{ post.title | json }},
            "date": {{ post.date | json }},
            "date_friendly": {{ post.date | date: '%d %b, %Y' | json }},{% if post.lede %}
            "lede": {{ post.lede | truncatewords: 15 |  replace: '....', '...' |  replace: ',...', '...' | json }},{% endif %}
            "categories": {{ post.categories | join:', ' | json }},
            "tags": {{ post.tags | join:', ' | json }}{% unless post.searchable == 'no-content' %},
            "content": {{ post.content | strip_html | strip_newlines | json }}{% endunless %}
        }{% assign first = false %}
    {% endunless %}
{% endfor %}
]
