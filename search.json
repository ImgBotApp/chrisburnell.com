---
layout: null
searchable: false
---

{% assign first = true %}
[
{% for page in site.pages %}
    {% unless page.title == null or page.title == empty or page.searchable == false or page.draft %}
        {% unless first %},{% endunless %}{
            "type": "page",
            "url": {{ page.url | jsonify }},
            "title": {{ page.title | jsonify }},
            "lede": {{ page.lede | jsonify }}{% unless page.searchable == 'no-content' %},
            "content": {{ page.content | strip_html | strip_newlines | jsonify }}{% endunless %}
        }{% assign first = false %}
    {% endunless %}
{% endfor %}
{% for page in site.posts %}
    {% unless page.title == null or page.title == empty or page.searchable == false or page.draft %}
        {% unless first %},{% endunless %}{
            "type": "{{ page.categories }}",
            "url": {{ page.url | jsonify }},
            "title": {{ page.title | jsonify }},
            "date": {{ page.date | jsonify }},
            "date_friendly": {{ page.date | date: '%d %b, %Y' | jsonify }},{% if page.lede %}
            "lede": {{ page.lede | truncatewords: 20 |  replace: '....', '...' |  replace: ',...', '...' | jsonify }},{% endif %}
            "categories": {{ page.categories | join:', ' | jsonify }},
            "tags": {{ page.tags | join:', ' | jsonify }}{% unless page.searchable == 'no-content' %},
            "content": {{ page.content | strip_html | strip_newlines | jsonify }}{% endunless %}
        }{% assign first = false %}
    {% endunless %}
{% endfor %}
]
