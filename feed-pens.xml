---
layout: null
---
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0">

    <channel>

        <title>{{ site.author }} - Pens Only</title>
        <link href="{{ site.url }}"/>
        <author>
            <name>{{ site.author }}</name>
            <email>{{ site.author_email }}</email>
        </author>
        <language>en</language>
        <copyright>Copyright 2015 {{ site.author }} under a Creative Commons license.</copyright>

        <image>
            <url>{{ site.url }}/favicon.png</url>
            <title>{{ site.author }}</title>
            <link>{{ site.url }}</link>
        </image>

        {% for post in site.pens %}
        {% unless post.draft %}
            <item>
                <title>{{ post.title }}</title>
                <link>{{ site.url }}{{ post.url }}</link>
                <pubDate>{{ post.date | date_to_xmlschema }}</pubDate>
                <id>{{ site.url }}{{ post.id }}</id>
                {% if post.tags %}
                    <tags>{{ post.tags | array_to_sentence_string }}</tags>
                {% endif %}
            </item>
        {% endunless %}
        {% endfor %}

    </channel>

</rss>
